#!/bin/sh

set -ex

if [ -f "DEPS" ]; then
   deps=`cat DEPS`
fi
rm -rf _config
mkdir -p _config
ocamlfind query -r -i-format ${deps} > _config/inc
ocamlfind query -r -predicates syntax,preprocessor -format '-I %d %A' ${deps} > _config/pp
ocamlfind query -r -predicates syntax,preprocessor -format '-I %d %A' camlp4.quotations.o camlp4.lib camlp4.extend > _config/syntax

if [ -x configure.arch ]; then
  ./configure.arch
fi
